<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <h1>Checkout</h1>
        <form action="/thanhtoan" method="post" id="checkout-form">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="name">Tên</label>
                        <input type="text" id="hoten" class="form-control" name="hoten">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="address">Địa chỉ</label>
                        <input type="text" id="diachi" class="form-control" name="diachi" >
                    </div>
                </div>
                <hr>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-name">Số điện thoại</label>
                        <input type="text" id="sodienthoai" class="form-control" name="sodienthoai">
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Thanh Toán</button>
        </form>
    </div>
</div>