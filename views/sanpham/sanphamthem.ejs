                    <span>Gia</span>
                    <input class="file-path validate" type="number" name="gia" id="gia">
                    
                    </div>
                   
                    <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                    <div class="text-left">
                        <button type="submit" class="btn btn-primary">Save</button>
                  
                    </div>
                </div>
                </div>
                
                
                </form>
                
